
.scrollViewStyle {
    flex-direction: column;
    background-color: #e8e8e8;
    width: 100%;
    height: 100%;
}


.videoImageViewStyle {
    display: flex;
    background-color: white;
    font-size: 30rpx;
    height: 100%;
    margin: 3rpx;
    padding: 20rpx;
    line-height: 120%;
}

.videoImageStyle {
    display: flex;
    position: relative;
    width: 710rpx;
    height: 460rpx;
}

.playBtnStyle {
    display: flex;
    position: absolute;
    width: 120rpx;
    height: 120rpx;
    margin-left: 355rpx;
    margin-top: 230rpx;
    transform: translate(-50%, -50%);
}


.textViewStyle {
    display: flex;
    position: absolute;
    justify-content: center;
    color: white;
    width: 80%;
    height: auto;
    left: 10%;
    margin-top: 390rpx;
    flex-wrap: wrap;
    font-size: 35rpx;
}

